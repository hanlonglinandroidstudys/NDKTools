<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_choosepic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择照片" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="质量"
            android:padding="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"/>
        <Button
            android:id="@+id/btn_compress_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="质量压缩" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_simple_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="长"
            android:padding="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/ed_sample_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="宽"
            android:padding="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"/>
        <Button
            android:id="@+id/btn_compress_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="采样率压缩" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="缩放倍数"
            android:padding="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"/>
        <Button
            android:id="@+id/btn_compress_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="尺寸压缩"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_compress_cpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="终极压缩libjpeg" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp" />
</LinearLayout>